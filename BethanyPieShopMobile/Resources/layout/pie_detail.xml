<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/pattern">


    <ImageView
        android:id="@+id/pieImageView"
        android:contentDescription ="pie image"
        android:layout_width="match_parent"
        android:layout_height= "100dp"
        android:layout_marginTop= "10dp"
        android:layout_gravity= "center_horizontal"
         />
    <TextView
        android:text="Pie Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/pieNameTextView" />

    <TextView
        android:text="Short Desctiption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:id="@+id/shortDescriptionTextView" />

    <TextView
        android:text="We and our partners store and/or access information on a device, such as cookies and process personal data, such as unique identifiers and standard information sent by a device for personalised ads and content, ad and content measurement, and audience insights, as well as to develop and improve products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="12dp"
        android:textColor="@android:color/black"
        android:id="@+id/descriptionTextView" />

    <TextView
        android:text="Price: 10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/priceTextView" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Amount:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/amountTextView"
            android:paddingTop="20dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <EditText
            android:inputType="number"
            android:id="@+id/amountEditText"
            android:layout_height="40dp"
            android:layout_width="30dp"
            android:paddingLeft="10dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:text="1"
            android:hint="1" />

    </LinearLayout>
   
</LinearLayout>
